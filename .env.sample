# App Settings
# APP_NAME=lug-back                      # Mặc định: "lug-back"
# DEBUG=False                            # Mặc định: False
# DATA_DIR=/var/lib/lug-back             # Mặc định: "/var/lib/lug-back"
# CORS_ORIGINS=http://localhost:3000,http://localhost  # Mặc định: "http://localhost:3000,http://localhost"
# ERROR_NOTIFICATION_EMAILS=songkhoi123@gmail.com,nam.nguyen@lug.vn,dang.le@sangtam.com,tan.nguyen@sangtam.com  # Mặc định như trên
# ONLINE_ERROR_NOTIFICATION_EMAILS=      # Mặc định: Các email trên + kiet.huynh@sangtam.com
XC_TOKEN=your_api_token_here             # Mặc định: ""
# API_ENDPOINT=http://10.100.0.1:8081/api/v2  # Mặc định: "http://10.100.0.1:8081/api/v2"

# Email Settings
# EMAIL_CONFIG_PATH=/etc/lug-back/email_config.ini  # Mặc định: "/etc/lug-back/email_config.ini"
SMTP_SERVER=smtp.gmail.com               # Bắt buộc, không có mặc định
SMTP_PORT=587                            # Bắt buộc, không có mặc định
EMAIL_ADDRESS=your_email@example.com     # Bắt buộc, không có mặc định
EMAIL_PASSWORD=your_app_password_here    # Bắt buộc, không có mặc định

# Google API Settings (cần ít nhất một phương thức xác thực)
GOOGLE_CREDENTIALS_PATH=/path/to/your/credentials.json  # Bắt buộc (hoặc một trong các biến bên dưới)
# GOOGLE_CREDENTIALS_B64=base64_encoded_credentials_json
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Sapo API Settings
SAPO_API_KEY=your_sapo_api_key           # Mặc định: ""
SAPO_SECRET_KEY=your_sapo_secret_key     # Mặc định: ""
SAPO_ACCESS_TOKEN=your_sapo_access_token # Mặc định: ""
